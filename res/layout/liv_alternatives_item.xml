<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ba_listitem"
    android:clickable="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:background="@drawable/ba_icon_vote"
        android:orientation="vertical"
        android:padding="5dp" >

        <com.wrapp.android.webimage.WebImageView
            android:id="@+id/alternative_icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/alternative_votes"
            style="?whitetext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/alternative_name"
                    style="?darkbluetext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/alternative_platforms_container"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="right"
                    android:layout_weight="3"
                    android:background="@drawable/ba_platforms"
                    android:gravity="center_vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/alternative_license"
                    style="?darktext"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:textSize="8dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9" >

            <TextView
                android:id="@+id/alternative_description"
                style="?darktext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="3"
                android:padding="2dp"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >

            <TextView
                android:id="@+id/alternative_tags"
                style="?darktext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="1dp"
                android:textSize="9dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>